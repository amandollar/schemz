PORT=5000
MONGODB_URI=mongodb://localhost:27017/schemz
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRE=7d
NODE_ENV=development

# Email Configuration
# For Gmail: Use app password (https://support.google.com/accounts/answer/185833)
# For production: Use SendGrid, AWS SES, or similar service
# Note: The service forces IPv4 to avoid IPv6 connection issues in production
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@schemz.com
# Optional: Set to 'true' to use secure connection (for port 465)
# EMAIL_SECURE=false

# Frontend URL for email verification links
FRONTEND_URL=http://localhost:3000

# Cloudinary Configuration (for profile image uploads only)
# Sign up at https://cloudinary.com to get your credentials
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Backblaze B2 Configuration (for PDF/document storage)
# Sign up at https://www.backblaze.com/b2/cloud-storage.html
# Create a bucket and get your credentials from Account > App Keys
B2_APPLICATION_KEY_ID=your_key_id
B2_APPLICATION_KEY=your_app_key
B2_BUCKET_NAME=your_bucket_name
# Note: B2_ENDPOINT is not needed - downloadUrl is automatically obtained from authorization
